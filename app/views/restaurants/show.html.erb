<h1>Restaurant Details</h1>
<h2><%= @restaurant.name %></h2>
<h4>address: <%= @restaurant.address %></h4>
<h4>phone: <%= @restaurant.phone_number %></h4>
<h4>category: <%= @restaurant.category %></h4>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.rating %></li>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<%= link_to "add a review", new_restaurant_review_path(@restaurant) %>
<%= link_to "back to restaurants", restaurants_path %>

